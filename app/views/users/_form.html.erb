      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with(model: @user, local: true) do |form| %>

  <div class="actions">
    <div class="form-group">
        <%= form.text_field :name , placeholder:"Name", class: "form-control " %>
        <%= form.email_field :email ,placeholder:"Email", class: "form-control " %>
        <%= form.password_field :password,placeholder:"Password",class: "form-control " %>
        <%= form.password_field :password_confirmation ,placeholder:"Confirm password",class: "form-control "%>
        
    </div> 
    <div class="col-12 text-center">
        <%= form.submit "Register",class: "btn btn-dark " %>
    </div>   
  </div>
<% end %>