<% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with(model: user, local: true, url: choose_new_or_edit) do |form| %>

  <div class="actions">
    <div class="form-group">
        <%= form.text_field :name , placeholder:"Name", class: "form-control " %>
        <%= form.email_field :email ,placeholder:"Email", class: "form-control " %>
        <%= form.password_field :password,placeholder:"Password",class: "form-control " %>
        <%= form.password_field :password_confirmation ,placeholder:"Confirm password",class: "form-control "%>
        <% if current_user.present?  %>
          <span class="text-light">
          <%= form.label :Role %>
          <%= form.radio_button :role, 'true' %> Admin  <%= form.radio_button :role, 'false' %> User<br /></span>
        <% end %>
    </div> 
    <div class="col-12 text-center">
        <%= form.submit "Register",class: "btn btn-dark " %>
    </div>   
  </div>
<% end %>