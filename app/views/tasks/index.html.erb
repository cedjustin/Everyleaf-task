<div class="content">
  <div class="row mt-3">    
    <div class="col-md-6">        
      <div class="card  progress-card" style="width:41rem;">
        <h4 class="card-header">All Unfished Tasks</h4>
        <div class="card-body">
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: <%= @progress %>%" aria-valuenow="<%= @progress %>" aria-valuemin="0" aria-valuemax="100"><div class="text-center" ><%= @progress %>%</div></div>
          </div>
        </div>
      </div>

      <div class="card bg-main in-progress-card " style="width:41rem;">
        <h4 class="card-header ">In Progress</h4>
        <div class="card-body">
          <% @tasks.each do |task|%>
          <div class="row">
            <div class="col-md-8">
              <img src="https://img.icons8.com/material-sharp/25/000000/table-of-content.png"> <b class="text-light"><%= task.task_name%></b> 
              <br>
              <img src="https://img.icons8.com/ios/25/000000/tag-window.png"> <%= task.label_name%><br>
              <img src="https://img.icons8.com/dotty/25/000000/rescheduling-a-task.png"> <%= task.start_date.strftime("%B %e, %Y")%><br>          
              <img src="https://img.icons8.com/ios/25/000000/deadline.png"> <%= task.deadline.strftime("%B %e, %Y")  %> <br>        
              <img src="https://img.icons8.com/windows/25/000000/connection-status-on.png"> <span><%= task.status%><br>         
                <%if task.priority == "1"%>
                  <img src="https://img.icons8.com/wired/25/000000/high-priority.png"> <%=  task.priority = "High"%>
                <%elsif task.priority == "2"%>
                  <img src="https://img.icons8.com/wired/25/000000/medium-priority.png"> <%=  task.priority = "Medium"%>
                <%elsif task.priority == "3"%>
                  <img src="https://img.icons8.com/wired/25/000000/low-priority.png"> <%=  task.priority = "Low"%>
                <%else%>
                <%end%></span>
            </div>
            <div class="col-md-4">
              <%= link_to image_tag("https://img.icons8.com/material-outlined/25/000000/visible.png"),task,class:"bg-light   rounded-circle badge"%>
              <%= link_to image_tag("https://img.icons8.com/metro/26/000000/pencil.png"),edit_task_path(task), class:"bg-primary   rounded-circle badge"%>
              <%= link_to image_tag("https://img.icons8.com/windows/25/000000/trash.png"),task, method: :delete, data: { confirm: 'Are you sure?' },class:"bg-danger  rounded-circle badge" %> 
            </div>
          </div> 
          <hr>
          <%end%>  
          <div class="d-flex justify-content-center">
            <%= paginate @tasks%> 
          </div>        
        </div>
      </div>  
    </div>    

    <div class="col-md-6 ">    
      <div class="card bg-main finished-card " style="width: 30rem;">
        <h4 class="card-header">Finished</h4>
        <div class="card-body finished-task">
          <% @finished.each do |task|%>
          <div class="row">
            <div class="col-md-7">
              <img src="https://img.icons8.com/material-sharp/25/000000/table-of-content.png"> <b class="text-light"><%= task.task_name%></b> 
              <br>
              <img src="https://img.icons8.com/ios/25/000000/tag-window.png"> <%= task.label_name%><br>
              <img src="https://img.icons8.com/dotty/25/000000/rescheduling-a-task.png"> <%= task.start_date.strftime("%B %e, %Y")%><br>          
              <img src="https://img.icons8.com/ios/25/000000/deadline.png"> <%= task.deadline.strftime("%B %e, %Y")  %> <br>        
              <img src="https://img.icons8.com/windows/25/000000/connection-status-on.png"> <span><%= task.status%><br>         
                <%if task.priority == "1"%>
                  <img src="https://img.icons8.com/wired/25/000000/high-priority.png"> <%=  task.priority = "High"%>
                <%elsif task.priority == "2"%>
                  <img src="https://img.icons8.com/wired/25/000000/medium-priority.png"> <%=  task.priority = "Medium"%>
                <%elsif task.priority == "3"%>
                  <img src="https://img.icons8.com/wired/25/000000/low-priority.png"> <%=  task.priority = "Low"%>
                <%else%>
                <%end%></span>
            </div>
            <div class="col-md-5">
              <%= link_to image_tag("https://img.icons8.com/material-outlined/25/000000/visible.png"),task,class:"bg-light   rounded-circle badge"%>
              <%= link_to image_tag("https://img.icons8.com/metro/26/000000/pencil.png"),edit_task_path(task), class:"bg-primary   rounded-circle badge"%>
              <%= link_to image_tag("https://img.icons8.com/windows/25/000000/trash.png"),task, method: :delete, data: { confirm: 'Are you sure?' },class:"bg-danger  rounded-circle badge" %> 
            </div>
          </div> 
          <hr>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>