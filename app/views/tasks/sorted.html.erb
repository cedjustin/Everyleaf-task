<div class="container">
  <div class="row mt-3">
    <div class="col-md-6">          
      <p>
          Sort by: &nbsp;
          <%= link_to 'Deadline',"sorted" , class:"btn btn-light" %>
          <%= link_to 'Created Date',tasks_path , class:"btn btn-light"%>  
      </p>  
    </div>
    <div class="col-md-6">
      <%= form_tag tasks_path, :method => 'get', :id => "products_search" do %>
        <p class="form-group row">
          <%= text_field_tag :search, params[:search] ,placeholder:"Search...", class:"form-control col-4 search"%>
          <%= submit_tag "Search", :task_name => nil, class:"btn btn-dark col-3" %>
        </p>
      <% end %>
    </div>    
  </div>
  <div class="">
    <table class="table table-sm all-tasks mt-2 mb-5">
        <thead>
        <tr>
            <th>Task name</th>
            <th>Label name</th>
            <th>Starts on</th>
            <th>Deadline</th>
            <th>Status</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        <% @task.each do |task|%> 
            <tr>
            <td><%= task.task_name%></td>
            <td><%= task.label_name%></td>
            <td><%= task.start_date.strftime("%B %e, %Y")%></td>
            <td>
                <%= task.deadline.strftime("%B %e, %Y")  %>               
            </td>
            <td><%= task.status%></td>
            <td><%= link_to "Show",task ,class:"btn btn-warning"%></td>
            <td><%= link_to "Edit",edit_task_path(task) , class:"btn btn-warning "%></td>
            <td><%= link_to "Delete", task, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
            </tr>
        <%end%>
        </tbody>
    </table>
  </div>
  </div>

