<div class="d-flex justify-content-center mt-5">
  <div class="card mt-5 bg-main col-6 mt-3 text-light">
    <p class="card-body text-center lead">      
      Task name: <%= @task.task_name %>  <br>
      Label name: <%= @task.label_name %>  <br>
      Start date: <%= @task.start_date %>  <br>
      <%if @task.deadline.present?%>
        Deadline: <%= @task.deadline %><br>
      <%else%>
      <%end%>
      Status: <%= @task.status %><br>    
    </p>  
    <p> <h2> Labels attached to this task</h2>
      <% @task.labels.each do |label| %>
      <ul style="text-decoration: none;">
      <li style="text-decoration: none;">
      <strong>Title:</strong><%= label.name + '       ' %> <br/>
      <strong>Content:</strong><%= label.content %>
      </li>
      </ul>
      <% end %>
    </p>
    <%= link_to 'Back', tasks_path , class: "btn btn-dark"%>  
  </div>
</div>
