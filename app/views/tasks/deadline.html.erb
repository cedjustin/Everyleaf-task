<div class="d-flex justify-content-center mt-5 mb-5">
  <div class="card " style="width: 28rem;">
    <h3 class="card-header text-center">Add a Deadline</h3>
    <div class="card-body">
      <%= form_with(model: @taskdeadline, local: true) do |form| %>
        <% if @taskdeadline.errors.any? %>
            <div id="error_explanation">
            <ul>
                <% @taskdeadline.errors.full_messages.each do |message| %>
                <li class="text-danger"><%= message %></li>
                <% end %>
            </ul>
            </div>
        <% end %>
        
        <div class="form-group">
            <label>Deadline</label>
            <%= form.date_field :deadline, as: :date, value: form.object.try(:strftime,"%d/%m/%Y"), class: "form-control" %>
        </div>
        
        <hr>  
        <div class="actions text-center">
            <%= form.submit  class:"btn btn-dark btn-block rounded-pill"  %>    
        </div>
        <% end %>   
      <span class="col-12">
        <%= link_to 'Back', tasks_path, class:"btn btn-dark rounded-pill btn-block"%>
      </span>
    </div>
  </div>
</div>
