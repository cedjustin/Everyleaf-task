<div class="container mt-5">
<h1 class="text-light text-center mt-5">All Labels</h1>
<table class="table table-sm bg-main mt-2 text-light">
 <thead>
   <tr>
     <th>Name</th>
     <th>Content</th>
     <th>Action</th>
     <th colspan="3"></th>
   </tr>
 </thead>
 <tbody>
   <% @labels.each do |label| %>
     <tr>
       <td><%= label.name %></td>
       <td><%= label.content %></td>
       <td><%= link_to 'Show', label ,class:"btn btn-secondary"%></td>
       <td><%= link_to 'Edit', edit_label_path(label),class:"btn btn-primary" %></td>
       <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
     </tr>
   <% end %>
 </tbody>
</table>
<br>
<div class="text-center">
  <%= link_to 'New Label', new_label_path,class:"btn btn-dark text-light " %>
</div>
</div>